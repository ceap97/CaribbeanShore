@model RefugioVerde.Models.Cliente

@{
    var userName = User.Identity.Name;
    var userImage = Url.Content($"~/images/usuarios/{userName}.jpeg");
}

<!DOCTYPE html>
<html lang="es">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Información del Cliente</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0-alpha3/dist/css/bootstrap.min.css" rel="stylesheet" />
    <link href="~/cliente/css/miperfil.css" rel="stylesheet" />
</head>
<body>
    <div class="container mt-5">
        <!-- Card Container -->
        <div class="card shadow-lg rounded">
            <!-- Header Section -->
            <div class="card-header bg-light text-center">
                <div class="profile-container">
                    <h2>@userName</h2>
                </div>
            </div>
            <!-- Body Section -->
            <div class="card-body p-4">
                <form>
                    <div class="section-heading text-center">
                        <h2 class="align-content-center">Información del Cliente</h2>
                    </div>
                    @if (Model != null)
                    {
                        <!-- Contact Name -->
                        <div class="row mb-3">
                            <div class="col-md-6">
                                <label class="form-label"><strong>Nombre de Contacto:</strong></label>
                                <input type="text" class="form-control bg-light" value="@Model?.Nombre @Model?.Apellido" readonly>
                            </div>
                            <div class="col-md-6">
                                <label class="form-label"><strong>Número de Documento:</strong></label>
                                <input type="text" class="form-control bg-light" value="@Model?.DocumentoIdentidad" readonly>
                            </div>
                            <div class="col-md-6">
                                <label class="form-label"><strong>Teléfono:</strong></label>
                                <input type="text" class="form-control bg-light" value="@Model?.Telefono" readonly>
                            </div>
                            <div class="col-md-6">
                                <label class="form-label"><strong>Correo Electrónico:</strong></label>
                                <input type="email" class="form-control bg-light" value="@Model?.Correo" readonly>
                            </div>
                            <div class="col-md-6">
                                <label class="form-label"><strong>Dirección:</strong></label>
                                <input type="text" class="form-control bg-light" value="@Model?.Direccion" readonly>
                            </div>
                            <div class="col-md-6">
                                <label class="form-label"><strong>Género:</strong></label>
                                <input type="text" class="form-control bg-light" value="@Model?.Genero" readonly>
                            </div>
                        </div>
                        <!-- Edit Button -->
                        <div class="text-center mt-4">
                            <button type="button" class="btn btn-warning" onclick="openEditClientModal(@Model?.ClienteId)">Editar</button>
                        </div>
                    }
                    else
                    {
                        <!-- Add Button -->
                        <div class="text-center mt-4">
                            <button type="button" class="btn btn-primary" onclick="openAddClientModal()">Agregar Cliente</button>
                        </div>
                    }
                </form>
            </div>
        </div>
    </div>

    <script src="~/admin/assets/js/popper.min.js"></script>
    <script src="~/admin/assets/js/jquery-3.7.1.js"></script>
    <script src="~/admin/assets/js/bootstrap.min.js"></script>
    <script src="~/admin/assets/js/sweetalert2@11.js"></script>
    <script src="~/cliente/vistascliente/agregarcliente.js"></script>
    <script src="~/cliente/vistascliente/editarcliente.js"></script>
</body>
</html>

