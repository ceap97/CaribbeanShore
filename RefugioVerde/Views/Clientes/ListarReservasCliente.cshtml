   @model List<RefugioVerde.Models.Reserva>

@{
    Layout = null;
}

<!DOCTYPE html>
<html lang="es">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Reservas del Cliente</title>
    <link href="https://cdn.datatables.net/1.11.5/css/jquery.dataTables.min.css" rel="stylesheet">
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet">
</head>
<body>
    <div class="container mt-5">
        <h2>Reservas del Cliente</h2>

        @if (Model == null || !Model.Any())
        {
            <p>No se encontraron reservas para este cliente.</p>
        }
        else
        {
            <table id="reservasTable" class="display">
                <thead>
                    <tr>
                        <th>Fecha de Reserva</th>
                        <th>Fecha de Inicio</th>
                        <th>Fecha de Fin</th>
                        <th>Habitación</th>
                        <th>Estado</th>
                        <th>Servicio</th>
                        <th>Comodidad</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var reserva in Model)
                    {
                        <tr>
                            <td>@reserva.FechaReserva.ToString("dd/MM/yyyy")</td>
                            <td>@reserva.FechaInicio.ToString("dd/MM/yyyy")</td>
                            <td>@reserva.FechaFin.ToString("dd/MM/yyyy")</td>
                            <td>@reserva.Habitacion?.NombreHabitacion</td>
                            <td>@reserva.EstadoReserva?.Nombre</td>
                            <td>@reserva.Servicio?.Nombre</td>
                            <td>@reserva.Comodidad?.Nombre</td>
                        </tr>
                    }
                </tbody>
            </table>
        }
    </div>

    @section Scripts {
        <script src="https://cdn.datatables.net/1.11.5/js/jquery.dataTables.min.js"></script>
        <script src="https://cdn.jsdelivr.net/npm/sweetalert2@11"></script>
        <script src="~/js/ListarReservasCliente.js"></script>
    }
</body>
</html>
