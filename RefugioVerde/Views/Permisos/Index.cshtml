@{
    ViewBag.Title = "Index";
    Layout = "_Admin";
}
@section Estilos {
    <link href="~/admin/assets/css/buttons.datatables.css" rel="stylesheet" />
    <link href="~/admin/assets/css/datatables.datatables.css" rel="stylesheet" />
    <a href="~/admin/assets/js/es-es.json">~/admin/assets/js/es-es.json</a>


}
<div class="row">
    <div class="col-12">
        <div class="card-box">
            <div class="card-header">
                <button class="btn btn-success btn-sm float-end" onclick="openCreateModal()"><img src="Admin/Fonts/circle-plus-solid.svg" alt="Crear" style="width: 16px; height: 16px; margin-right: 5px;" />Agregar Nuevo Cargo</button>
            </div>
            <div class="card-body">
                <table id="tbPermisos" class="table">
                    <thead>
                        <tr>
                            <th>PermisoId</th>
                            <th>Nombre</th>
                            <th>Descripcion</th>
                            <th>Acciones</th>
                        </tr>
                    </thead>
                    <tbody>
                        <!-- Los datos se cargarán aquí mediante JavaScript -->
                    </tbody>
                </table>
            </div>
        </div>
    </div>
</div>

<!-- Modal Crear -->
<div class="modal fade" id="createModal" tabindex="-1" aria-labelledby="createModalLabel" aria-hidden="true">
    <div class="modal-dialog">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title" id="createModalLabel">Agregar</h5>
            </div>
            <div class="modal-body">
                <!-- Formulario de creación -->
                <form id="createForm">
                    <div class="mb-3">
                        <label for="nombre" class="form-label">Nombre</label>
                        <input type="text" class="form-control" id="nombre" name="nombre" required maxlength="50" title="El nombre no puede tener más de 50 caracteres.">
                        <div class="invalid-feedback">El nombre es obligatorio y no puede tener más de 50 caracteres.</div>
                    </div>
                    <div class="mb-3">
                        <label for="descripcion" class="form-label">Descripción</label>
                        <textarea class="form-control" id="descripcion" name="descripcion" maxlength="200" title="La descripción no puede tener más de 200 caracteres."></textarea>
                        <div class="invalid-feedback">La descripción no puede tener más de 200 caracteres.</div>
                    </div>
                    <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Cerrar</button>
                    <button type="submit" class="btn btn-primary">Guardar</button>
                </form>
            </div>
        </div>
    </div>
</div>

<!-- Modal Editar -->
<div class="modal fade" id="editModal" tabindex="-1" aria-labelledby="editModalLabel" aria-hidden="true">
    <div class="modal-dialog">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title" id="editModalLabel">Editar</h5>
                <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
            </div>
            <div class="modal-body">
                <!-- Formulario de edición -->
                <form id="editForm">
                    <input type="hidden" id="editPermisoId" name="permisoId">
                    <div class="mb-3">
                        <label for="editNombre" class="form-label">Nombre</label>
                        <input type="text" class="form-control" id="editNombre" name="nombre" required maxlength="50" title="El nombre no puede tener más de 50 caracteres.">
                        <div class="invalid-feedback">El nombre es obligatorio y no puede tener más de 50 caracteres.</div>
                    </div>
                    <div class="mb-3">
                        <label for="editDescripcion" class="form-label">Descripción</label>
                        <textarea class="form-control" id="editDescripcion" name="descripcion" maxlength="200" title="La descripción no puede tener más de 200 caracteres."></textarea>
                        <div class="invalid-feedback">La descripción no puede tener más de 200 caracteres.</div>
                    </div>
                    <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Cerrar</button>
                    <button type="submit" class="btn btn-primary">Guardar</button>
                </form>
            </div>
        </div>
    </div>
</div>

<!-- Modal para Detalles -->
<div class="modal fade" id="detailsModal" tabindex="-1" aria-labelledby="detailsModalLabel" aria-hidden="true">
    <div class="modal-dialog">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title" id="detailsModalLabel">Detalles</h5>
                <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
            </div>
            <div class="modal-body">
                <p><strong>PermisoId:</strong> <span id="detailsPermisoId"></span></p>
                <p><strong>Nombre:</strong> <span id="detailsNombre"></span></p>
                <p><strong>Descripción:</strong> <span id="detailsDescripcion"></span></p>
            </div>
            <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Close</button>
        </div>
    </div>
</div>

<!-- Modal Eliminar -->
<div class="modal fade" id="deleteModal" tabindex="-1" aria-labelledby="deleteModalLabel" aria-hidden="true">
    <div class="modal-dialog">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title" id="deleteModalLabel">Eliminar Permiso</h5>
                <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
            </div>
            <div class="modal-body">
                <p>¿Está seguro de que desea eliminar este permiso?</p>
                <button type="button" class="btn btn-danger" id="confirmDelete">Eliminar</button>
                <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Close</button>
            </div>
        </div>
    </div>
</div>
@section Scripts {
<script src="~/admin/vistasmodal/permisos.js"></script>
}
