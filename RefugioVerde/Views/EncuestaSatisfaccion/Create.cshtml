@model RefugioVerde.Models.EncuestaSatisfaccion

@{
    ViewData["Title"] = "Encuesta de Satisfacción";
}

<h2>Encuesta de Satisfacción</h2>

<form asp-action="Create">
    <div class="form-group">
        <label asp-for="CalificacionGeneral" class="control-label"></label>
        <input asp-for="CalificacionGeneral" class="form-control" />
        <span asp-validation-for="CalificacionGeneral" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="CalificacionHabitacion" class="control-label"></label>
        <input asp-for="CalificacionHabitacion" class="form-control" />
        <span asp-validation-for="CalificacionHabitacion" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="CalificacionAtencion" class="control-label"></label>
        <input asp-for="CalificacionAtencion" class="form-control" />
        <span asp-validation-for="CalificacionAtencion" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="Comentarios" class="control-label"></label>
        <textarea asp-for="Comentarios" class="form-control"></textarea>
        <span asp-validation-for="Comentarios" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="HabitacionId" class="control-label"></label>
        <select asp-for="HabitacionId" class="form-control" asp-items="ViewBag.Habitaciones"></select>
        <span asp-validation-for="HabitacionId" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="EmpleadoId" class="control-label"></label>
        <select asp-for="EmpleadoId" class="form-control" asp-items="ViewBag.Empleados"></select>
        <span asp-validation-for="EmpleadoId" class="text-danger"></span>
    </div>
    <div class="form-group">
        <input type="submit" value="Enviar" class="btn btn-primary" />
    </div>
</form>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}
