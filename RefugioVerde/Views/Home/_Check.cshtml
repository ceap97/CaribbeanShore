@model IEnumerable<RefugioVerde.Models.Habitacion>

<div class="book-now-area">
    <div class="container">
        <div class="row justify-content-center">
            <div class="col-12 col-lg-10">
                <div class="book-now-form">
                    <form asp-action="FiltrarHabitaciones" method="post">
                        <!-- Form Group -->
                        <div class="form-group">
                            <label for="checkIn">Check In</label>
                            <input type="date" class="form-control" id="checkIn" name="checkIn" required />
                        </div>

                        <!-- Form Group -->
                        <div class="form-group">
                            <label for="checkOut">Check Out</label>
                            <input type="date" class="form-control" id="checkOut" name="checkOut" required />
                        </div>

                        <!-- Form Group -->
                        <div class="form-group">
                            <label for="adults">Adults</label>
                            <select class="form-control" id="adults" name="adults">
                                <option value="1">1</option>
                                <option value="2">2</option>
                                <option value="3">3</option>
                                <option value="4">4</option>
                                <option value="5">5</option>
                            </select>
                        </div>

                        <!-- Form Group -->
                        <div class="form-group">
                            <label for="children">Children</label>
                            <select class="form-control" id="children" name="children">
                                <option value="0">0</option>
                                <option value="1">1</option>
                                <option value="2">2</option>
                                <option value="3">3</option>
                                <option value="4">4</option>
                                <option value="5">5</option>
                            </select>
                        </div>

                        <!-- Button -->
                        <button type="submit" class="btn palatin-btn">Buscar</button>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>

<section class="rooms-area section-padding-100-0">
    <div class="container-fluid">
        <div class="row justify-content-center">
            @foreach (var habitacion in Model)
            {
                <!-- Single Rooms Area -->
                <div class="col-12 col-md-6 col-lg-4">
                    <div class="single-rooms-area wow fadeInUp" data-wow-delay="100ms">
                        <!-- Thumbnail -->
                        <img src="@habitacion.Imagen" alt="Imagen de @habitacion.NombreHabitacion" class="bg-thumbnail bg-img" style="background-image: src(@habitacion.Imagen)" />
                        <!-- Price -->
                        <p class="price-from">Precio: $@habitacion.Precio</p>
                        <!-- Rooms Text -->
                        <div class="rooms-text">
                            <p> @habitacion.EstadoHabitacion.Nombre</p>
                            <div class="line"></div>
                            <h4>@habitacion.NombreHabitacion</h4>
                            <p>Descripcion: @habitacion.Tipo</p>
                            <p>Capacidad: @habitacion.Capacidad personas</p> <!-- Nuevo campo para Capacidad -->
                        </div>
                        <!-- Book Room -->
                        <a href="#" class="book-room-btn btn palatin-btn" onclick="openCreateModal()">Reservar</a>
                    </div>
                </div>
            }
        </div>
    </div>
</section>
