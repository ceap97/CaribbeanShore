@model IEnumerable<RefugioVerde.Models.Comodidad>

<section class="rooms-area section-padding-100-0">
    <div class="container-fluid">
        <div class="row justify-content-center">
            <div class="col-12 col-lg-6">
                <div class="section-heading text-center">
                    <div class="line-"></div>
                    <h2>Comodidades</h2>
                </div>
            </div>
        </div>

        <div class="row justify-content-center">
            <div class="services-container" style="overflow-x: auto; white-space: nowrap;">
                @foreach (var comodidad in Model)
                {
                    <!-- Single Rooms Area -->
                    <div class="col-12 col-md-6 col-lg-4 d-inline-block" style="float: none;">
                        <div class="single-rooms-area wow fadeInUp" data-wow-delay="100ms">
                            <!-- Thumbnail -->
                            <img src="@comodidad.Imagen" alt="Imagen de @comodidad.Nombre" class="bg-thumbnail bg-img" style="background-image: src(@comodidad.Imagen)" />
                            <!-- Price -->
                            <p class="price-from">Precio: $@comodidad.Precio</p>
                            <!-- Rooms Text -->
                            <div class="rooms-text">
                                <div class="line"></div>
                                <h4>@comodidad.Nombre</h4>
                                <p>Descripcion: @comodidad.Descripcion</p>
                            </div>
                        </div>
                    </div>
                }
            </div>
        </div>
    </div>
</section>
