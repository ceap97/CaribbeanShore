@model IEnumerable<RefugioVerde.Models.Pago>

@{
    ViewData["Title"] = "Historial de Pagos";
}
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Historial de Pagos</title>
    <link href="https://cdn.datatables.net/1.11.5/css/jquery.dataTables.min.css" rel="stylesheet">
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet">
</head>
<h2>Historial de Pagos</h2>

<table id="pagosTable" class="table table-striped table-bordered">
    <thead>
        <tr>
            <th>Monto</th>
            <th>Método de Pago</th>
            <th>Estado</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var pago in Model)
        {
            <tr>
                <td>@pago.Monto.ToString("C")</td>
                <td>@pago.MetodoPago</td>
                <td>@pago.EstadoPago.Nombre</td>
            </tr>
        }
    </tbody>
</table>

<script src="https://code.jquery.com/jquery-3.6.0.min.js"></script>
<script src="https://cdn.datatables.net/1.11.5/js/jquery.dataTables.min.js"></script>
<script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>
<script>
    $(document).ready(function() {
        $('#pagosTable').DataTable();
    });
</script>
