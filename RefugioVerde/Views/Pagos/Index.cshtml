@{
    ViewBag.Title = "Pagos";
    Layout = "_Admin";
}
@section Estilos {
    <link href="~/admin/assets/css/buttons.datatables.css" rel="stylesheet" />
    <link href="~/admin/assets/css/datatables.datatables.css" rel="stylesheet" />
}

<div class="row">
    <div class="col-12">
        <div class="card-box">
            <div class="card-header">
                <button class="btn btn-success btn-sm float-end" onclick="openCreateModal()">
                    <img src="Admin/Fonts/circle-plus-solid.svg" alt="Agregar" style="width: 16px; height: 16px; margin-right: 5px;" />
                    Agregar Nuevo Pago
                </button>
            </div>
            <div class="card-body">
                <table id="tbPagos" class="table">
                    <thead>
                        <tr>
                            <th>IdPago</th>
                            <th>Monto</th>
                            <th>Método de Pago</th>
                            <th>Comprobante</th>
                            <th>ReservaId</th>
                            <th>Estado de Pago</th>
                            <th>Acciones</th>
                        </tr>
                    </thead>
                    <tbody>
                        <!-- Los datos se cargarán aquí mediante JavaScript -->
                    </tbody>
                </table>
            </div>
        </div>
    </div>
</div>

<!-- Modal Crear -->
<div class="modal fade" id="createModal" tabindex="-1" aria-labelledby="createModalLabel" aria-hidden="true">
    <div class="modal-dialog">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title" id="createModalLabel">Agregar Pago</h5>
            </div>
            <div class="modal-body">
                <form id="createForm">
                    <div class="mb-3">
                        <label for="monto" class="form-label">Monto</label>
                        <input type="number" class="form-control" id="monto" name="monto" required min="0.01" step="0.01" title="El monto debe ser un valor positivo.">
                        <div class="invalid-feedback">El monto es obligatorio y debe ser un valor positivo.</div>
                    </div>
                    <div class="mb-3">
                        <label for="metodoPago" class="form-label">Método de Pago</label>
                        <input type="text" class="form-control" id="metodoPago" name="metodoPago" required maxlength="50" title="El método de pago no puede tener más de 50 caracteres.">
                        <div class="invalid-feedback">El método de pago es obligatorio y no puede tener más de 50 caracteres.</div>
                    </div>
                    <div class="mb-3">
                        <label for="comprobante" class="form-label">Comprobante (base64)</label>
                        <input type="text" class="form-control" id="comprobante" name="comprobante" required>
                        <div class="invalid-feedback">El comprobante es obligatorio.</div>
                    </div>
                    <div class="mb-3">
                        <label for="reservaId" class="form-label">Reserva</label>
                        <select class="form-select" id="reservaId" name="reservaId" required>
                            <!-- Opciones de reserva se cargarán aquí -->
                        </select>
                        <div class="invalid-feedback">La reserva es obligatoria.</div>
                    </div>
                    <div class="mb-3">
                        <label for="estadoPagoId" class="form-label">Estado de Pago</label>
                        <select class="form-select" id="estadoPagoId" name="estadoPagoId" required>
                            <!-- Opciones de estado de pago se cargarán aquí -->
                        </select>
                        <div class="invalid-feedback">El estado de pago es obligatorio.</div>
                    </div>
                    <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Cerrar</button>
                    <button type="submit" class="btn btn-primary">Guardar</button>
                </form>
            </div>
        </div>
    </div>
</div>

<!-- Modal Editar -->
<div class="modal fade" id="editModal" tabindex="-1" aria-labelledby="editModalLabel" aria-hidden="true">
    <div class="modal-dialog">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title" id="editModalLabel">Editar Pago</h5>
                <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
            </div>
            <div class="modal-body">
                <form id="editForm">
                    <input type="hidden" id="editIdPago" name="idPago">
                    <div class="mb-3">
                        <label for="editMonto" class="form-label">Monto</label>
                        <input type="number" class="form-control" id="editMonto" name="monto" required min="0.01" step="0.01" title="El monto debe ser un valor positivo.">
                        <div class="invalid-feedback">El monto es obligatorio y debe ser un valor positivo.</div>
                    </div>
                    <div class="mb-3">
                        <label for="editMetodoPago" class="form-label">Método de Pago</label>
                        <input type="text" class="form-control" id="editMetodoPago" name="metodoPago" required maxlength="50" title="El método de pago no puede tener más de 50 caracteres.">
                        <div class="invalid-feedback">El método de pago es obligatorio y no puede tener más de 50 caracteres.</div>
                    </div>
                    <div class="mb-3">
                        <label for="editComprobante" class="form-label">Comprobante (base64)</label>
                        <input type="text" class="form-control" id="editComprobante" name="comprobante" required>
                        <div class="invalid-feedback">El comprobante es obligatorio.</div>
                    </div>
                    <div class="mb-3">
                        <label for="editReservaId" class="form-label">Reserva</label>
                        <select class="form-select" id="editReservaId" name="reservaId" required>
                            <!-- Opciones de reserva se cargarán aquí -->
                        </select>
                        <div class="invalid-feedback">La reserva es obligatoria.</div>
                    </div>
                    <div class="mb-3">
                        <label for="editEstadoPagoId" class="form-label">Estado de Pago</label>
                        <select class="form-select" id="editEstadoPagoId" name="estadoPagoId" required>
                            <!-- Opciones de estado de pago se cargarán aquí -->
                        </select>
                        <div class="invalid-feedback">El estado de pago es obligatorio.</div>
                    </div>
                    <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Cerrar</button>
                    <button type="submit" class="btn btn-primary">Guardar</button>
                </form>
            </div>
        </div>
    </div>
</div>

<!-- Modal para Detalles -->
<div class="modal fade" id="detailsModal" tabindex="-1" aria-labelledby="detailsModalLabel" aria-hidden="true">
    <div class="modal-dialog">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title" id="detailsModalLabel">Detalles del Pago</h5>
                <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
            </div>
            <div class="modal-body">
                <p><strong>IdPago:</strong> <span id="detailsIdPago"></span></p>
                <p><strong>Monto:</strong> <span id="detailsMonto"></span></p>
                <p><strong>Método de Pago:</strong> <span id="detailsMetodoPago"></span></p>
                <p><strong>Comprobante:</strong> <span id="detailsComprobante"></span></p>
                <p><strong>ReservaId:</strong> <span id="detailsReservaId"></span></p>
                <p><strong>Estado de Pago:</strong> <span id="detailsEstadoPago"></span></p>
            </div>
            <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Cerrar</button>
        </div>
    </div>
</div>

<!-- Modal Eliminar -->
<div class="modal fade" id="deleteModal" tabindex="-1" aria-labelledby="deleteModalLabel" aria-hidden="true">
    <div class="modal-dialog">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title" id="deleteModalLabel">Eliminar Pago</h5>
                <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
            </div>
            <div class="modal-body">
                <p>¿Está seguro de que desea eliminar este pago?</p>
                <button type="button" class="btn btn-danger" id="confirmDelete">Eliminar</button>
                <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Cerrar</button>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <script src="~/admin/vistasmodal/pagos.js"></script>
}
