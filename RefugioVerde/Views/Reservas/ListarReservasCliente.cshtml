@model List<RefugioVerde.Models.ReservaViewModel>

@{
    ViewData["Title"] = "Reservas del Cliente";
}
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Reservas del Cliente</title>
    <link href="https://cdn.datatables.net/1.11.5/css/jquery.dataTables.min.css" rel="stylesheet">
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet">
    <link href="https://cdn.jsdelivr.net/npm/select2@4.1.0-rc.0/dist/css/select2.min.css" rel="stylesheet" />
</head>
<h2>Historial de reservas</h2>

<table id="reservasTable" class="table table-striped table-bordered">
    <thead>
        <tr>
            <th>Fecha de Reserva</th>
            <th>Fecha de Inicio</th>
            <th>Fecha de Fin</th>
            <th>Habitación</th>
            <th>Comodidades</th>
            <th>Servicios</th>
            <th>Estado de Reserva</th>
            <th>Monto Total</th>
            <th>Confirmación</th>
            <th>Acciones</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var reserva in Model)
        {
            <tr id="reserva-@reserva.ReservaId" class="@((reserva.EstadoReserva == "Cancelada") ? "table-secondary" : "")">
                <td>@reserva.FechaReserva.ToString("dd/MM/yyyy")</td>
                <td>@reserva.FechaInicio.ToString("dd/MM/yyyy")</td>
                <td>@reserva.FechaFin.ToString("dd/MM/yyyy")</td>
                <td>@reserva.Habitacion</td>
                <td>
                    @if (reserva.Comodidades != null && reserva.Comodidades.Any())
                    {
                        <ul>
                            @foreach (var comodidad in reserva.Comodidades)
                            {
                                <li>@comodidad</li>
                            }
                        </ul>
                    }
                    else
                    {
                        <span>No seleccionadas</span>
                    }
                </td>
                <td>
                    @if (reserva.Servicios != null && reserva.Servicios.Any())
                    {
                        <ul>
                            @foreach (var servicio in reserva.Servicios)
                            {
                                <li>@servicio</li>
                            }
                        </ul>
                    }
                    else
                    {
                        <span>No seleccionados</span>
                    }
                </td>
                <td id="estado-@reserva.ReservaId">@reserva.EstadoReserva</td>
                <td>@reserva.MontoTotalFormateado</td>
                <td>@reserva.Confirmacion</td>

                <td>
                    @if (reserva.EstadoReserva != "Confirmada" && reserva.EstadoReserva != "Cancelada")
                    {
                        <button class="btn btn-warning" onclick="openEditReservaModal(@reserva.ReservaId)">Editar</button>
                        <button class="btn btn-secondary" onclick="cancelarReserva(@reserva.ReservaId)">Cancelar</button>
                        <button class="btn btn-success" onclick="openPagoModal(@reserva.ReservaId)">Pagar</button>
                    }
                </td>
            </tr>
        }
    </tbody>
</table>

<script src="https://code.jquery.com/jquery-3.6.0.min.js"></script>
<script src="https://cdn.datatables.net/1.11.5/js/jquery.dataTables.min.js"></script>
<script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>
<script src="https://cdn.jsdelivr.net/npm/sweetalert2@11"></script>
<script src="https://cdn.jsdelivr.net/npm/select2@4.1.0-rc.0/dist/js/select2.min.js"></script>
<script src="~/Cliente/VistasCliente/Pago.js"></script>
<script src="~/Cliente/VistasCliente/EditarCliente.js"></script>
<script src="~/Cliente/VistasCliente/Cancelar.js"></script>
<script>
    $(document).ready(function() {
        $('#reservasTable').DataTable();
    });
</script>
<script>
    var cancelarReservaUrl = '@Url.Action("CancelarReserva", "Reservas")';
</script>
