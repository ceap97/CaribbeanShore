@model List<RefugioVerde.Models.ReservaViewModel>

@{
    ViewData["Title"] = "Reservas del Cliente";
}
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Reservas del Cliente</title>
    <link href="https://cdn.datatables.net/1.11.5/css/jquery.dataTables.min.css" rel="stylesheet">
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet">
</head>
<h2>Reservas del Cliente</h2>

<div class="text-center mb-3">
    <button type="button" class="btn btn-primary" onclick="openCreateModal()">Agregar Reserva</button>
</div>

<table id="reservasTable" class="table table-striped table-bordered">
    <thead>
        <tr>
            <th>Fecha de Reserva</th>
            <th>Fecha de Inicio</th>
            <th>Fecha de Fin</th>
            <th>Habitación</th>
            <th>Estado de Reserva</th>
            <th>Servicio</th>
            <th>Comodidad</th>
            <th>Acciones</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var reserva in Model)
        {
            <tr id="reserva-@reserva.ReservaId" class="@((reserva.EstadoReserva == "Cancelada") ? "table-secondary" : "")">
                <td>@reserva.FechaReserva.ToString("dd/MM/yyyy")</td>
                <td>@reserva.FechaInicio.ToString("dd/MM/yyyy")</td>
                <td>@reserva.FechaFin.ToString("dd/MM/yyyy")</td>
                <td>@reserva.Habitacion</td>
                <td id="estado-@reserva.ReservaId">@reserva.EstadoReserva</td>
                <td>@reserva.Servicio</td>
                <td>@reserva.Comodidad</td>
                <td>
                    <button class="btn btn-warning" onclick="openEditReservaModal(@reserva.ReservaId)" @(reserva.EstadoReserva == "Cancelada" ? "disabled" : "")>Editar</button>
                    <button class="btn btn-secondary" onclick="cancelarReserva(@reserva.ReservaId)" @(reserva.EstadoReserva == "Cancelada" ? "disabled" : "")>Cancelar</button>
                    <button class="btn btn-success" onclick="openPagoModal(@reserva.ReservaId)">Pagar</button>
                </td>
            </tr>
        }
    </tbody>
</table>

<!-- Modal de Pago -->
<div class="modal fade" id="pagoModal" tabindex="-1" aria-labelledby="pagoModalLabel" aria-hidden="true">
    <div class="modal-dialog">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title" id="pagoModalLabel">Realizar Pago</h5>
                <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
            </div>
            <div class="modal-body">
                <form id="pagoForm">
                    <div class="mb-3">
                        <label for="monto" class="form-label">Monto</label>
                        <input type="number" class="form-control" id="monto" name="Monto" required>
                    </div>
                    <div class="mb-3">
                        <label for="metodoPago" class="form-label">Método de Pago</label>
                        <input type="text" class="form-control" id="metodoPago" name="MetodoPago" required>
                    </div>
                    <div class="mb-3">
                        <label for="comprobante" class="form-label">Comprobante</label>
                        <input type="file" class="form-control" id="comprobante" name="Comprobante" required>
                    </div>
                    <input type="hidden" id="reservaId" name="ReservaId">
                    <button type="submit" class="btn btn-primary">Pagar</button>
                </form>
            </div>
        </div>
    </div>
</div>

<script src="https://code.jquery.com/jquery-3.6.0.min.js"></script>
<script src="https://cdn.datatables.net/1.11.5/js/jquery.dataTables.min.js"></script>
<script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>
<script src="https://cdn.jsdelivr.net/npm/sweetalert2@11"></script>
<script src="~/Cliente/VistasCliente/Reservar.js"></script>
<script src="~/Cliente/VistasCliente/EditarCliente.js"></script>
<script src="~/Cliente/VistasCliente/Cancelar.js"></script>

<script>
    $(document).ready(function() {
        $('#reservasTable').DataTable();
    });

    function openPagoModal(reservaId) {
        $('#reservaId').val(reservaId);
        $('#pagoModal').modal('show');
    }

    $('#pagoForm').submit(function(event) {
        event.preventDefault();
        var formData = new FormData(this);
        $.ajax({
            url: '@Url.Action("Crear", "Pagos")',
            type: 'POST',
            data: formData,
            processData: false,
            contentType: false,
            success: function() {
                $('#pagoModal').modal('hide');
                Swal.fire('Éxito', 'Pago realizado con éxito.', 'success');
            },
            error: function() {
                Swal.fire('Error', 'No se pudo realizar el pago.', 'error');
            }
        });
    });
</script>


