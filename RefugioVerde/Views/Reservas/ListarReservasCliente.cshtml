@model List<RefugioVerde.Models.ReservaViewModel>

@{
    ViewData["Title"] = "Reservas del Cliente";
}
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Reservas del Cliente</title>
    <link href="https://cdn.datatables.net/1.11.5/css/jquery.dataTables.min.css" rel="stylesheet">
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet">
</head>
<h2>Reservas del Cliente</h2>

<div class="text-center mb-3">
    <button type="button" class="btn btn-primary" onclick="openCreateModal()">Agregar Reserva</button>
</div>

<table id="reservasTable" class="table table-striped table-bordered">
    <thead>
        <tr>
            <th>Fecha de Reserva</th>
            <th>Fecha de Inicio</th>
            <th>Fecha de Fin</th>
            <th>Habitación</th>
            <th>Estado de Reserva</th>
            <th>Servicio</th>
            <th>Comodidad</th>
            <th>Acciones</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var reserva in Model)
        {
            <tr>
                <td>@reserva.FechaReserva.ToString("dd/MM/yyyy")</td>
                <td>@reserva.FechaInicio.ToString("dd/MM/yyyy")</td>
                <td>@reserva.FechaFin.ToString("dd/MM/yyyy")</td>
                <td>@reserva.Habitacion</td>
                <td>@reserva.EstadoReserva</td>
                <td>@reserva.Servicio</td>
                <td>@reserva.Comodidad</td>
                <td>
                    <button class="btn btn-warning" onclick="openEditReservaModal(@reserva.ReservaId)">Editar</button>
                    <button class="btn btn-danger" onclick="openDeleteReservaModal(@reserva.ReservaId)">Eliminar</button>
                </td>
            </tr>
        }
    </tbody>
</table>


    <script src="https://code.jquery.com/jquery-3.6.0.min.js"></script>
    <script src="https://cdn.datatables.net/1.11.5/js/jquery.dataTables.min.js"></script>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>
    <script src="https://cdn.jsdelivr.net/npm/sweetalert2@11"></script>
    <script src="~/Cliente/VistasCliente/Reservar.js"></script>
    <script src="~/Cliente/VistasCliente/EditarCliente.js"></script>
    <script>
        $(document).ready(function() {
            $('#reservasTable').DataTable();
        });
    </script>
